<h1>New Product</h1>

<%= form_with model: @product, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, class: "form-control" %>
  </div>

  <%= form.submit "Create Product", class: "btn btn-success" %>
<% end %>
