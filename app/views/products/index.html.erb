<h1>Products List</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Price</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add New Product', new_product_path, class: "btn btn-primary" %>
